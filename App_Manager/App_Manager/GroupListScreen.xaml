<Window x:Class="App_Manager.GroupListScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Manager"
        mc:Ignorable="d"
        Title="GroupListScreen" Height="500" Width="750">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Menu x:Name="FileMenu" HorizontalAlignment="Left" Height="20" Margin="0,0,0,0" VerticalAlignment="Top" Width="55" Foreground="Black">
            <MenuItem Header="Options" Width="50">
                <MenuItem Header="New Job" HorizontalAlignment="Left" Width="145" Click="addButton_Click">
                </MenuItem>
                <MenuItem Header="Delete Job(s)" HorizontalAlignment="Left" Width="155" Click="delButton_Click">
                </MenuItem>
                <MenuItem Name="CopyJobs" Header="Copy Job(s)" HorizontalAlignment="Left" Width="155">
                </MenuItem>
                <MenuItem Name="MoveJobs" Header="Move Job(s)" HorizontalAlignment="Left" Width="155">
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
