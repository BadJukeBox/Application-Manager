<Window x:Class="App_Manager.nameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Manager"
        mc:Ignorable="d"
        Title="nameDialog" Height="100" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter name for new Group" HorizontalAlignment="Center"/>
            <TextBox x:Name="ResponseBlock" HorizontalAlignment="Center" Width="125"/>
            <Button x:Name="saveBtn" Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="save_Click"/>
        </StackPanel>
    </Grid>
</Window>
