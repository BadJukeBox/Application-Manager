<Window x:Class="App_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Manager"
        mc:Ignorable="d"
        Title="Application Manager" Height="350" Width="525">
    <Menu x:Name="FileMenu" HorizontalAlignment="Left" Height="18" Margin="0,0,0,0" VerticalAlignment="Top" Width="52" Foreground="Black">
        <MenuItem Header="File" Width="39" Click="MenuItem_Click">
            <MenuItem Header="New" HorizontalAlignment="Left" Width="140">
                <MenuItem Header="Group" HorizontalAlignment="Left" Width="140" Click="NewGroup_Click"/>
            </MenuItem>
            <MenuItem Header="Open" HorizontalAlignment="Left" Width="140">
                <MenuItem Header="Group" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </MenuItem>
    </Menu>
</Window>
