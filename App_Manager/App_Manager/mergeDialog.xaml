<Window x:Class="App_Manager.mergeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Manager"
        mc:Ignorable="d"
        Title="mergeDialog" Height="125" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter name for new Group" HorizontalAlignment="Center"/>
            <TextBox x:Name="MergeFrom" Text="Group to merge from:" GotKeyboardFocus="Text_GotFocus" HorizontalAlignment="Center" Width="125" Margin="0,0"/>
            <TextBox x:Name="MergeTo" Text="Group to merge to:" GotKeyboardFocus="Text_GotFocus" HorizontalAlignment="Center" Width="125" Margin="0,2.5"/>
            <Button x:Name="saveBtn" Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="save_Click"/>
        </StackPanel>
    </Grid>
</Window>
